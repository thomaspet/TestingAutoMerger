[
    {
        "Name": "Faktura",
        "Code": "invoice_list",
        "Type": "Table",
        "IsTopLevelTicker": true,
        "Group": "Salg",
        "Model": "CustomerInvoice",
        "Expand": "Customer.Info",
        "Columns": [
            {
                "Header": "Fakturanr",
                "Field": "InvoiceNumber",
                "Width": "100px",
                "Type": "text"
            },
            {
                "Header": "Kundenr",
                "Field": "Customer.CustomerNumber",
                "Type": "text"
            },
            {
                "Header": "Kundenavn",
                "Field": "Customer.Info.Name",
                "Width": "250px"
            },
            {
                "Header": "Fakturadato",
                "Field": "InvoiceDate"
            },
            {
                "Header": "Forfallsdato",
                "Field": "PaymentDueDate",
                "Format": "DatePassed"
            },
            {
                "Header": "Sum inkl mva",
                "Field": "TaxInclusiveAmount",
                "Format": "NumberPositiveNegative",
                "Width": "150px"
            },
            {
                "Header": "Status",
                "Field": "StatusCode"
            }
        ],
        "Actions": [
            {
                "Name": "Ny faktura",
                "Code": "new_invoice",
                "ExecuteWithoutSelection": true,
                "Type": "new"
            },
            {
                "Name": "Åpne faktura",
                "Code": "open_invoice",
                "Type": "details",
                "DisplayInContextMenu": true,
                "DisplayInActionBar": true
            },
            {
                "Name": "Kopier",
                "Code": "copy_invoice",
                "ConfirmBeforeExecuteMessage": "Er du sikker på at du vil kopiere valgt faktura?",
                "Type": "action",
                "Action": "copy",
                "DisplayInContextMenu": true,
                "DisplayInActionBar": false
            },
            {
                "Name": "Fakturer",
                "Code": "invoice_invoice",
                "Type": "transition",
                "Transition": "invoice",
                "DisplayInContextMenu": true,
                "DisplayInActionBar": false
            }
        ],
        "SubTickersCodes": ["invoice_details", "invoice_items"],
        "Filters": [
            {
                "Name": "Alle",
                "Code": "all_invoices",
                "Filter": ""
            },
            {
                "Name": "Mine under arbeid",
                "Code": "my_draft_invoices",
                "UseAllCriterias": true,
                "FilterGroups": [{
                    "UseAllCriterias": true,
                    "FieldFilters": [
                    {
                        "Field": "StatusCode",
                        "Operator": "eq",
                        "Value": "42001"
                    },
                    {
                        "Field": "CreatedBy",
                        "Operator": "eq",
                        "Value": ":currentuserid"
                    }]
                }]
            },
            {
                "Name": "Forfalte",
                "Code": "due_invoices",
                "Filter": "PaymentDueDate lt getdate()"
            },
            {
                "Name": "Mine større enn 2000",
                "Code": "my_invoices",
                "UseAllCriterias": true,
                "FilterGroups": [{
                    "FieldFilters": [
                    {
                        "Field": "TaxInclusiveAmount",
                        "Operator": "gt",
                        "Value": "2000"
                    },
                    {
                        "Field": "CreatedBy",
                        "Operator": "eq",
                        "Value": ":currentuserid"
                    }]
                }]
            }
        ]
    },
