{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@uni-entities": ["src/app/unientities", "app/unientities"],
      "@app/*": ["src/app/*", "app/*"],
      "@uni-framework/*": ["src/framework/*", "../framework/*"],
      "@uni-models/*": ["src/app/models/*", "app/models/*"]
    }
  }
}
