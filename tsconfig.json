{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "system",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./dist",
        "outFile": "./dist/app.bundle.js",
        "rootDir": "./src",
        "sourceMap": true,
        "target": "es5",
        "removeComments": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "typings/main",
        "typings/main.d.ts",
        "kendo/typescript/",
        "dist"
    ]
}